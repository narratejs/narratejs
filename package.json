{
  "name": "narratejs",
  "version": "0.1.2",
  "description": "A blogging system for NextJS",
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "style": "dist/narratejs.css",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npx tsc",
    "publish": "npm publish",
    "version": "auto-changelog -p && git add CHANGELOG.md",
    "dev": "npm-run-all --parallel watch:tsc watch:tailwind",
    "watch:tsc": "tsc --watch --project ./tsconfig.json",
    "watch:tailwind": "tailwindcss build -i src/global.css -o dist/narratejs.css --watch",
    "build:css": "npx tailwindcss build -i src/global.css -o dist/narratejs.css"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/react": "^18.2.75",
    "auto-changelog": "^2.4.0",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.4"
  },
  "dependencies": {
    "cssnano": "^6.1.2",
    "next": "^14.1.4",
    "react": "^18.2.0"
  }
}
